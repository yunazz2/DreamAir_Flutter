<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.joeun.server.mapper.CommentMapper">

        <insert id="insert">
            INSERT INTO comment(
                parent_table, parent_no, writer, content,
                group_no, super_no, depth_no, seq_no, sub_count, board_no
            )
            VALUES(
                #{parentTable}, #{parentNo}, #{writer}, #{content},
                #{groupNo}, #{superNo}, #{depthNo}, #{seqNo}, #{subCount}, #{boardNo}
            )
        </insert>
        
        <select id="listByBoard">
            SELECT *
            FROM comment
            WHERE parent_no = #{boardNo}
        </select>
		
        <update id="update">
            UPDATE comment SET 
                parent_table = #{parentTable},
                parent_no = #{parentNo},
                writer = #{writer},
                content = #{content},
                group_no = #{groupNo},
                super_no = #{superNo},
                depth_no = #{depthNo},
                seq_no = #{seqNo},
                reg_date = #{regDate},
                upd_date = #{updDate},
                sub_count = #{subCount}
            WHERE comment_no = #{commentNo}
        </update>
		
		 
         <!-- <update id="update">
            UPDATE comment SET 
                content = #{content}
            WHERE comment_no = #{commentNo}
        </update> -->
        
        <delete id="delete">
            DELETE FROM comment WHERE comment_no = #{commentNo}
        </delete>

        <select id="getComment" resultType="Comment">
            SELECT * FROM comment WHERE comment_no = #{commentNo}
        </select>

        <select id="getAllComments" resultType="Comment">
            SELECT * FROM comment
        </select>

        <select id="select" resultType="Comment">
            SELECT * FROM comment WHERE comment_no  = #{commentNo}
        </select>



</mapper>